if books.length > 0
  table.book-list
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
    each book in books
      tr
        td
          a(href='/books/' + book.id)= book.title
        td= book.author
        td= book.genre
        td= book.year
else
  .no-results
    p No results found.  Please try a different search.